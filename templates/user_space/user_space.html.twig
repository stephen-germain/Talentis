{% extends 'base.html.twig' %}

{% block title %}Mon espace{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row formSearch">
            <div class="col-2">    
                {% if app.user.img %}
                <img src="{{ asset('img/' ~app.user.img) }}" class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt="img profil"> 
                {% else %}
                 <img src="{{ asset('img/man-303792_1280.png') }}" class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt="img profil"> 
                {% endif %}
                <p>Bonjour {{ app.user.prenom}}, </p>
                <ul>
                    <li><a href="#">Mes factures</a></li>
                    <li><a href="#">Mon abonnement</a></li>
                </ul>
            </div>

            <div class="col-4 offset-3">
                <div class="row">
                    <h4>Espace Recruteur</h4>
                </div>
                {{ form_start(formulaire) }}
                <div class="row">
                    {{ form_widget(formulaire.titre) }}
                    {{ form_widget(formulaire.metier) }}
                   {# {{ form_widget(formulaire.experience) }} #}
                </div>
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <div class="col text-center">
                                <p>Soft skills :</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                {{ form_widget(formulaire.capacites) }}
                                {# {{ form_widget(formulaire.softSkills2) }}
                                {{ form_widget(formulaire.softSkills3) }} #}
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            <div class="col text-center">
                                <p>Hard skills :</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                {{ form_widget(formulaire.competences) }}
                                {# {{ form_widget(formulaire.hardSkills2) }}
                                {{ form_widget(formulaire.hardSkills3) }} #}
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_end(formulaire ) }}
              

              {% if app.request.method == 'POST' %}
              <div class="row">
                 <div class="col-md-6 offset-3">
                    {% if profils | length == 0 %}
                        <h2>Aucun résultat</h2>
                    {% else %}
                        <h2>Résultat de la recherche</h2>
                        {% for profil in profils %}
                        <div>
                            <p>Nom : {{ profil.nom }}</p>
                            <p>Prenom : {{ profil.prenom }}</p>

                            {% for competences in profil.competences %}
                            <p>competences : {{ competences.competences }}</p>
                            {% endfor %}

                        </div>
                        {% endfor %}
                    {% endif %}
                 </div> 
                {% endif %}
              </div>
            




            

                {# <select class="form-control form-control-sm">
                   {% for test in competence %}
                        <option>{{ test.competences }}</option>
                    {% endfor %}
                </select>  #}
            </div>
        </div>
    </div>
{% endblock %}
