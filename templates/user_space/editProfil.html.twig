{% extends 'base.html.twig' %}

{% block title %}Modification du Profil{% endblock %}

{% block body %}
    <div class="edit container mt-4">
        <div class="row">
            <div class="col text-center py-4">
                <h2>Modification du profil</h2>
                <a href="{{ path('user_space') }}">Retourner sur mon espace</a>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-10 col-md-6">
                {{form_start(formulaire)}}
                    <div class="form-group row">
                        <div class="col-md-3">
                            {{ form_label(formulaire.nom, 'Nom') }}
                        </div>
                        <div class="col-md-9">
                            {{ form_widget(formulaire.nom) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            {{ form_label(formulaire.prenom, 'Prenom') }}
                        </div>
                        <div class="col-md-9">
                            {{ form_widget(formulaire.prenom) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            {{ form_label(formulaire.email, 'Mail') }}
                        </div>
                        <div class="col-md-9">
                            {{ form_widget(formulaire.email) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            {{ form_label(formulaire.societe, 'Société') }}
                        </div>
                        <div class="col-md-9">
                            {{ form_widget(formulaire.societe) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            {{ form_label(formulaire.fonction) }}
                        </div>
                        <div class="col-md-9">
                            {{ form_widget(formulaire.fonction) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            {{ form_label(formulaire.adresseSociete) }}
                        </div>
                        <div class="col-md-9">
                            {{ form_widget(formulaire.adresseSociete) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            {{ form_label(formulaire.img) }}
                        </div>
                        <div class="col-md-9">
                            {{ form_widget(formulaire.img) }}
                        </div>
                    </div>
                    <div class="col text-center py-3">
                        <button class="btn pl-4 pr-4" type="submit">Envoyer</button>
                    </div>
                {{form_end(formulaire)}}
            </div>
        </div>
    </div>
{% endblock %}
