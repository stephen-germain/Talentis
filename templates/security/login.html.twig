{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="container py-4">
    <form method="post" class="formLog">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal text-center pb-4">Please sign in</h1>
        <div class="row">
            <div class="col-2 offset-3 text-right">
            <label for="inputEmail">Adresse mail</label>
        </div>
        <div class="col-3">
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>
        </div>
        
        <div class="row">
            <div class="col-2 offset-3 text-right">
                 <label for="inputPassword">Mot de passe</label>
            </div>  
            <div class="col-3">
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>     
        </div>
       
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
        <div class="row">
            <div class="col text-center py-3">
                <button class="btn pl-4 pr-4" type="submit">
                    Valider
                </button>
            </div> 
        </div>
        <div class="row">
            <div class="col-6 offset-5">
                <a href="#">Mot de passe oublié ?</a>
            </div>
            <div class="col-6 offset-5 pb-5">
                <a href="{{ path('app_register') }}">Pas encore inscrit ? Créer un compte</a>
            </div>
        </div>
    </form>
</div>

{% endblock %}
